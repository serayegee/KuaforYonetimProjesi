@model odevweb.Models.Randevu

<div class="container mt-5">
    <h1 class="text-center mb-4">Randevu Al</h1>

    <form asp-action="RandevusAl" method="post" class="p-4 border rounded shadow-lg bg-light">
        @Html.AntiForgeryToken()

        <div class="form-group mb-4">
            <label for="Tarih" class="form-label fw-bold">Randevu Tarihi</label>
            <input type="date" id="Tarih" name="Tarih" class="form-control form-control-lg" required />
        </div>

        <div class="form-group mb-4">
            <label for="Saat" class="form-label fw-bold">Randevu Saati</label>
            <input type="time" id="Saat" name="Saat" class="form-control form-control-lg" required />
        </div>

        <div class="form-group mb-4">
            <label for="IslemId" class="form-label fw-bold">İşlem Seçin</label>
            <select id="IslemId" name="islemId" class="form-select form-select-lg" required>
                <option value="" disabled selected>İşlem Seçiniz</option>
                @foreach (var islem in ViewBag.Islemler)
                {
                    <option value="@islem.IslemId">@islem.IslemAd - @islem.Ucret ₺</option>
                }
            </select>
        </div>

        <div class="form-group mb-4">
            <label for="PersonelId" class="form-label fw-bold">Personel Seçin</label>
            <select id="PersonelId" name="personelId" class="form-select form-select-lg" required>
                <option value="" disabled selected>Personel Seçiniz</option>
                @foreach (var personel in ViewBag.Personeller)
                {
                    <option value="@personel.PersonelId">@personel.PersonelAd @personel.PersonelSoyad</option>
                }
            </select>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg w-100">Randevu Al</button>
        </div>
    </form>
</div>
