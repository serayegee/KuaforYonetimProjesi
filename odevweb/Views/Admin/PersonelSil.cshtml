@model odevweb.Models.Personel

<h1>Personel Sil</h1>

<h3>Bu personeli silmek istediğinize emin misiniz?</h3>

<div>
    <h4>@Model.Ad @Model.Soyad</h4>
    <p>Uzmanlık Alanı: @Model.Uzmanlik</p>
</div>

<form asp-action="PersonelSilConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PersonelId" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="PersonelListesi" class="btn btn-secondary">İptal</a>
</form>
