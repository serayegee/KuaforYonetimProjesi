@model odevweb.Models.PersonelEkleViewModel

<form asp-action="PersonelEkle" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Personel.Ad" class="control-label">Ad</label>
        <input asp-for="Personel.Ad" class="form-control" />
        <span asp-validation-for="Personel.Ad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Personel.Soyad" class="control-label">Soyad</label>
        <input asp-for="Personel.Soyad" class="form-control" />
        <span asp-validation-for="Personel.Soyad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Personel.IslemId" class="control-label">Uzmanlık Alanı (İşlem)</label>
        <select asp-for="Personel.IslemId" class="form-control">
            <option value="">İşlem Seçin</option>
            @foreach (var islem in Model.Islemler)
            {
                <option value="@islem.IslemId">@islem.Ad</option>
            }
        </select>
        <span asp-validation-for="Personel.IslemId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
