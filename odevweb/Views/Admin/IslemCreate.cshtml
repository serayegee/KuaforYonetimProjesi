@model odevweb.Models.Islem

@{
    ViewData["Title"] = "IslemCreate";
}


<div class="container mt-5">
    <h2 class="text-center mb-4">Yeni İşlem Ekle</h2>

    <div class="card shadow-lg">
        <div class="card-body">
            <form asp-action="IslemKaydet" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group mb-3">
                    <label asp-for="IslemAd" class="form-label">İşlem Adı</label>
                    <input asp-for="IslemAd" class="form-control" placeholder="İşlem adını giriniz" />
                    <span asp-validation-for="IslemAd" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Sure" class="form-label">Süre (Dakika)</label>
                    <input asp-for="Sure" type="number" class="form-control" placeholder="İşlem süresini dakika cinsinden giriniz" />
                    <span asp-validation-for="Sure" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Ucret" class="form-label">Ücret (₺)</label>
                    <input asp-for="Ucret" type="number" step="0.01" class="form-control" placeholder="İşlem ücretini giriniz" />
                    <span asp-validation-for="Ucret" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <input type="submit" value="Kaydet" class="btn btn-success btn-lg" />
                    <a asp-action="IslemIndex" class="btn btn-secondary btn-lg ms-3">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
