<div class="container mt-5">
    <h2 class="text-center text-danger">İşlem Silme</h2>

    <div class="card shadow-lg mt-4">
        <div class="card-body">
            <p>Bu işlemi silmek istediğinizden emin misiniz?</p>
            <div class="mb-3">
                <strong>@Model.IslemAd</strong> (@Model.Sure dakika, @Model.Ucret ₺)
            </div>
        </div>
        <div class="card-footer text-center">
            <form asp-action="IslemDeleteConfirmed" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.IslemId" />
                <button type="submit" class="btn btn-danger me-2">Sil</button>
                <a asp-action="IslemIndex" class="btn btn-secondary">İptal</a>
            </form>
        </div>
    </div>
</div>


