@model odevweb.Models.Islem

@{
    ViewData["Title"] = "IslemDetails";
}


<div class="container mt-5">
    <h2 class="text-center text-primary">İşlem Detayları</h2>

    <div class="card shadow-lg mt-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 fw-bold text-secondary">İşlem Adı:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IslemAd)</dd>

                <dt class="col-sm-4 fw-bold text-secondary">Süre (dk):</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Sure)</dd>

                <dt class="col-sm-4 fw-bold text-secondary">Ücret (₺):</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Ucret)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="IslemEdit" asp-route-id="@Model?.IslemId" class="btn btn-primary me-2">Düzenle</a>
            <a asp-action="IslemIndex" class="btn btn-secondary">Listeye Dön</a>
        </div>
    </div>
</div>