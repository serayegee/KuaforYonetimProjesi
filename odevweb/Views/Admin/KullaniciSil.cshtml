<div class="container mt-5">
    <h2 class="text-center text-danger mb-4">Kullanıcıyı Sil</h2>

    <div class="card shadow-lg">
        <div class="card-body text-center">
            <p class="fs-5">Bu kullanıcıyı silmek istediğinize emin misiniz?</p>
            <div class="mb-4">
                <strong class="text-primary">@Model.Ad</strong>
                <span class="text-muted">(@Model.KullaniciAdi)</span>
            </div>

            <form asp-action="KullaniciSilConfirmed" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.KullaniciId" />
                <button type="submit" class="btn btn-danger btn-lg">Sil</button>
            </form>
            <a asp-action="KullaniciListesi" class="btn btn-secondary btn-lg ms-3">İptal</a>
        </div>
    </div>
</div>

