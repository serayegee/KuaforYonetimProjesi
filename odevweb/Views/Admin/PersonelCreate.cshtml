@model odevweb.Models.Personel

@{
    ViewData["Title"] = "PersonelCreate";
}


<div class="container mt-5">
    <h2 class="text-center mb-4">Yeni Personel Ekle</h2>

    <div class="card shadow-lg">
        <div class="card-body">
            <form asp-action="PersonelCreate">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group mb-3">
                    <label asp-for="PersonelAd" class="form-label">Ad</label>
                    <input asp-for="PersonelAd" class="form-control" placeholder="Personel adını giriniz" />
                    <span asp-validation-for="PersonelAd" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PersonelSoyad" class="form-label">Soyad</label>
                    <input asp-for="PersonelSoyad" class="form-control" placeholder="Personel soyadını giriniz" />
                    <span asp-validation-for="PersonelSoyad" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IslemId" class="form-label">İşlem Türü</label>
                    <select asp-for="IslemId" class="form-control" asp-items="ViewBag.IslemId"></select>
                </div>

                <div class="text-center mt-4">
                    <input type="submit" value="Kaydet" class="btn btn-success btn-lg" />
                    <a asp-action="PersonelIndex" class="btn btn-secondary btn-lg ms-3">Personel Listesi</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
