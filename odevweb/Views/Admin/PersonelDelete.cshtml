<div class="container mt-5">
    <h2 class="text-center text-danger">Personel Sil</h2>

    <div class="card shadow-lg mt-4">
        <div class="card-body">
            <h4 class="text-secondary">Bu personeli silmek istediğinizden emin misiniz?</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3 fw-bold">Ad</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PersonelAd)</dd>

                <dt class="col-sm-3 fw-bold">Soyad</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PersonelSoyad)</dd>

                <dt class="col-sm-3 fw-bold">İşlem</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Islem.IslemAd)</dd>
            </dl>
        </div>

        <div class="card-footer text-center">
            <form asp-action="PersonelDelete" method="post" class="d-inline">
                <input type="hidden" asp-for="PersonelId" />
                <button type="submit" class="btn btn-danger me-2">Sil</button>
            </form>
            <a asp-action="PersonelIndex" class="btn btn-secondary">İptal</a>
        </div>
    </div>
</div>